{
  "name": "nys-today",
  "version": "0.1.0",
  "description": "",
  "private": true,
  "engines": {
    "node": ">= 12.x",
    "npm": ">= 6.x"
  },
  "scripts": {
    "build": "npm run webpack",
    "build:local": "npm run clean && npm run webpack",
    "clean": "rm -rf ./build",
    "start": "cross-env NODE_ENV=development webpack-dev-server --mode development --keep-alive-timeout 0",
    "test": "echo \"Error: no test specified\" && exit 1",
    "webpack": "cross-env NODE_ENV=production webpack -p --colors --display minimal",
    "webpack:dev": "cross-env NODE_ENV=development webpack -d --colors --display minimal"
  },
  "keywords": [],
  "repository": {
    "url": "https://github.com/mikesprague/nys-today"
  },
  "author": {
    "name": "Michael Sprague",
    "email": "mikesprague@gmail.com"
  },
  "homepage": "https://nys.today",
  "license": "MIT",
  "dependencies": {
    "@pusher/push-notifications-web": "^1.0.1",
    "bootstrap": "^4.5.0",
    "dayjs": "^1.8.30",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "^3.4.1",
    "register-service-worker": "^1.7.1",
    "snyk": "^1.366.2"
  },
  "devDependencies": {
    "@babel/core": "^7.10.4",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.10.4",
    "@babel/plugin-transform-object-assign": "^7.10.4",
    "@babel/plugin-transform-runtime": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-react": "^7.10.4",
    "@babel/runtime": "^7.10.4",
    "@fullhuman/postcss-purgecss": "^2.3.0",
    "@typescript-eslint/eslint-plugin": "^2",
    "@typescript-eslint/parser": "^2",
    "autoprefixer": "^9.8.5",
    "babel-loader": "^8.1.0",
    "compression-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^6.0.3",
    "css-loader": "^3.6.0",
    "cssnano": "^4.1.10",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-react-app": "^5.2.1",
    "eslint-plugin-compat": "^3.8.0",
    "eslint-plugin-flowtype": "^3",
    "eslint-plugin-html": "^6.0.2",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-markdown": "^1.0.2",
    "eslint-plugin-react-app": "^6.2.2",
    "eslint-plugin-react-hooks": "^2",
    "eslint-plugin-security": "^1.4.0",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "^4.3.0",
    "inquirer": "^6",
    "mini-css-extract-plugin": "^0.9.0",
    "netlify-cli": "^2.58.0",
    "node-sass": "^4.14.1",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "postcss-loader": "^3.0.0",
    "prettier": "^2.0.5",
    "prettier-eslint": "^11.0.0",
    "prettier-stylelint": "^0.4.2",
    "sass-lint": "^1.13.1",
    "sass-loader": "^9.0.2",
    "style-loader": "^1.2.1",
    "terser-webpack-plugin": "^3.0.6",
    "typescript": "^3.9.7",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "3.11.0",
    "workbox-webpack-plugin": "^5.1.3"
  },
  "babel": {
    "plugins": [
      "@babel/plugin-transform-runtime",
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-transform-object-assign",
      "@babel/plugin-proposal-object-rest-spread"
    ],
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true
    },
    "extends": [
      "airbnb",
      "react-app"
    ],
    "plugins": [
      "compat",
      "html",
      "import",
      "jsx-a11y",
      "markdown",
      "react-app",
      "react-hooks",
      "security"
    ],
    "parserOptions": {
      "parser": "babel-parser"
    },
    "rules": {
      "arrow-spacing": "error",
      "curly": "error",
      "eqeqeq": "error",
      "max-len": [
        "warn",
        {
          "code": 120,
          "tabWidth": 2,
          "ignoreUrls": true
        }
      ],
      "quotes": [
        "error",
        "single",
        {
          "avoidEscape": true,
          "allowTemplateLiterals": true
        }
      ],
      "react/jsx-filename-extension": [
        "warn",
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ],
      "semi": "error"
    }
  },
  "prettier": {
    "plugins": [
      "all"
    ],
    "printWidth": 120,
    "semi": true,
    "singleQuote": true,
    "tabwidth": true,
    "trailingComma": "all"
  }
}
